    <link href="/css/morris.css" rel="stylesheet">
    <link href="/css/sb-admin.css" rel="stylesheet">
    <link href="/css/training.css" rel="stylesheet">
    <link href="/css/workout_creations.css" rel="stylesheet">
    <link href="/css/profile.css", rel="stylesheet">

    <div id="wrapper">

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-lg-8">
                        <h3>Insira os dados da dieta</h3>
                        <%= simple_form_for [@coach, @diet], :html => {:class => 'form-basic' }  do |f| %>
                            <%= f.input :name, label:'Nome' %>
                            <%= f.input :coach_id, :as => :hidden, :input_html => { :value => @coach.id } %>
                            <%= f.nested_fields_for :diet_composes do |ff| %>
                                    <%= ff.remove_nested_fields_link %>
                                    <br>
                                    <%= ff.input :hour, label:'Hora' %>
                                    <%= ff.input :day, label:'Dia' %>
                                    <%= ff.input :food_id, label:'Alimento' %>
                                    <%= ff.input :quantity, label: 'Quantidade' %>
                                    <%= ff.input :diet_id, :as => :hidden %>
                                <% end %>
                            <%= f.add_nested_fields_link :diet_composes %>
                            <br><br>
                            <%= f.button :submit, label:'Enviar' %>
                        <% end %>
                        <br><br>
                    </div>
                </div>

            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>